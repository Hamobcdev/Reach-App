{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "."
  },
  "include": ["contracts/**/*", "scripts/**/*", "deploy.ts"],
  "exclude": ["node_modules", "build", "legacy_backup"]
}
